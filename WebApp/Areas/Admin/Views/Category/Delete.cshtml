@model Category

<form method="post" asp-area="Admin" asp-action="Delete" asp-controller="Category">
    <div class="border p-4 mt-4 shadow rounded">
        <input hidden asp-for="Id" />
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter Category" required disabled/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Display Order -->
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" type="number" class="form-control" placeholder="Enter Display Order" required disabled />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>


        <!-- Submit and Back Buttons -->
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control text-white">Delete Category</button>
            </div>
            <div class="col-6">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Categories List</a>
            </div>
        </div>
    </div>
</form>

