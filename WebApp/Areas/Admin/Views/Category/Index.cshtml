@model List<Category>

<div class="container">
    
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create Category
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model) 
            { 
                 <tr> 
                     <td>@user.Name</td> 
                     <td>@user.DisplayOrder</td>
                     <td>
                         <div class="w-75 btn-group" role="group">
                            <a asp-area="Admin" asp-controller="Category" asp-action="Upsert" asp-route-id=@user.Id class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id=@user.Id class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                         </div>
                     </td>
                 </tr> 
            }

        </tbody>
    </table>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
        <partial name="~/Views/Shared/_NotificationPartialView.cshtml" />
    }
}