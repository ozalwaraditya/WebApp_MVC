@model User

<form method="post" asp-action="Delete" asp-controller="User">
    <div class="border p-4 mt-4 shadow rounded">
        <input hidden asp-for="Id" />
        <div class="row pb-2">
            <h2 class="text-primary">Delete User</h2>
            <hr />
        </div>

        <!-- Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input disabled asp-for="Name" class="form-control" placeholder="Enter name" required />
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input disabled asp-for="Email" type="email" class="form-control" placeholder="Enter email" required />
        </div>

        <!-- Submit and Back Buttons -->
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary form-control">Back to Users List</a>
            </div>
        </div>
    </div>
</form>

