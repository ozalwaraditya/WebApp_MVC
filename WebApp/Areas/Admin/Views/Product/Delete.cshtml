@model ProductVM

<form method="post" asp-area="Admin" asp-action="Delete" asp-controller="Product">
    <div class="border p-4 mt-4 shadow rounded">
        <input type="hidden" asp-for="Product.Id" />
        <div class="row pb-2">
            <h2 class="text-danger">Delete Product</h2>
            <hr />
        </div>

        <!-- Product Name -->
        <div class="mb-3">
            <label asp-for="Product.Title" class="form-label"></label>
            <input asp-for="Product.Title" class="form-control" placeholder="Enter Product Name" required disabled />
            <span asp-validation-for="Product.Title" class="text-danger"></span>
        </div>

        <!-- Category -->
        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-label">Category</label>
            <select asp-for="Product.CategoryId" class="form-control" disabled
                    asp-items="Model.CategoryList">
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <!-- You can add other product fields here as needed -->
        <!-- Submit and Back Buttons -->
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control text-white">
                    Delete Product
                </button>
            </div>
            <div class="col-6">
                <a asp-area="Product" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back to Products List
                </a>
            </div>
        </div>
    </div>
</form>
