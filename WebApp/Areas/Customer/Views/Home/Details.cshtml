@model Product


<form method="post">
    <div class="card shadow-lg border-0 mt-4">
        <div class="card-header bg-gradient text-dark py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-uppercase mb-0">@Model.Title</h3>
                    <p class="text-dark-50 fw-semibold">by @Model.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body bg-light">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-area="Customer" asp-action="Index" class="btn btn-outline-dark bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded shadow-sm" alt="Book Image" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-dark">@Model.Category.Name</span>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75">ISBN: @Model.ISBN</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-75 pb-2">
                                List Price:
                                <span class="text-decoration-line-through">@Model.ListPrice</span>
                            </h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom border-dark">
                                <div class="text-dark text-opacity-75 fw-semibold">Quantity</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom border-dark">
                                <div class="text-dark text-opacity-75 fw-semibold">1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom border-dark">
                                <div class="text-dark text-opacity-75 fw-semibold">51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light border-bottom border-dark">
                                <div class="text-dark text-opacity-75 fw-semibold">100+</div>
                            </div>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-light text-warning fw-bold">
                                <div>@Model.ListPrice.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-warning fw-bold">
                                <div>@Model.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-warning fw-bold">
                                <div>@Model.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-light text-warning fw-bold">
                                <div>@Model.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row ps-2 my-3">
                            <p class="text-dark lh-sm">@Model.Description</p>
                        </div>
                        <div class="row ps-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-dark text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" value="1" class="form-control text-end"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled
                                        class="btn btn-dark bg-gradient w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart (Coming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
