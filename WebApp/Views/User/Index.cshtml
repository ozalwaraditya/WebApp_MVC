@model List<User>
<partial name="~/Views/Shared/_NotificationPartialView.cshtml" />

<div class="container">
    
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                User List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create User
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model) 
            { 
                 <tr> 
                     <td>@user.Id</td> 
                     <td>@user.Name</td> 
                     <td>@user.Email</td>
                     <td>
                         <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id=@user.Id class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id=@user.Id class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                         </div>
                     </td>
                 </tr> 
            }

        </tbody>
    </table>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}